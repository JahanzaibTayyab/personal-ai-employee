# AI Employee Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# VAULT CONFIGURATION (Bronze Tier)
# =============================================================================

# Vault path (default: ~/AI_Employee_Vault)
VAULT_PATH=~/AI_Employee_Vault

# File watcher interval in seconds (default: 60)
WATCH_INTERVAL=60

# Maximum file size for processing (bytes, default: 10MB)
MAX_FILE_SIZE=10485760

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# GMAIL INTEGRATION (Bronze Tier - Optional)
# =============================================================================

# Gmail watcher poll interval in seconds (default: 120)
GMAIL_POLL_INTERVAL=120

# Gmail OAuth credentials path (download from Google Cloud Console)
# 1. Go to https://console.cloud.google.com/
# 2. Create a project and enable Gmail API
# 3. Create OAuth 2.0 credentials (Desktop app)
# 4. Download as credentials.json
GMAIL_CREDENTIALS_PATH=./config/credentials.json

# Gmail OAuth token path (auto-generated after first auth)
GMAIL_TOKEN_PATH=./config/gmail_token.json

# =============================================================================
# SILVER TIER - APPROVAL WORKFLOW
# =============================================================================

# Default approval expiration in hours (default: 24)
APPROVAL_EXPIRATION_HOURS=24

# =============================================================================
# SILVER TIER - WHATSAPP MONITORING (Optional)
# =============================================================================

# WhatsApp session data path for Playwright automation
WHATSAPP_SESSION_PATH=./config/whatsapp_session

# WhatsApp keyword detection (comma-separated)
WHATSAPP_KEYWORDS=urgent,asap,invoice,payment,help,pricing

# =============================================================================
# SILVER TIER - LINKEDIN INTEGRATION (Optional)
# =============================================================================

# LinkedIn credentials for linkedin-api package
# Uses email/password authentication (not OAuth)
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# LinkedIn rate limit (posts per day, default: 25)
LINKEDIN_MAX_POSTS_PER_DAY=25

# =============================================================================
# SILVER TIER - SCHEDULER
# =============================================================================

# Default timezone for scheduled tasks (default: local)
SCHEDULER_TIMEZONE=local

# Default strategy for missed schedules: skip, run_immediately, queue
SCHEDULER_MISSED_STRATEGY=run_immediately

# =============================================================================
# GOLD TIER - ODOO ERP INTEGRATION
# =============================================================================

# Odoo Community Edition connection settings
ODOO_URL=http://localhost:8069
ODOO_DB=company_db
ODOO_USER=admin
ODOO_API_KEY=your_odoo_api_key

# =============================================================================
# GOLD TIER - META (FACEBOOK/INSTAGRAM) INTEGRATION
# =============================================================================

# Meta Graph API credentials
# 1. Go to https://developers.facebook.com/
# 2. Create an app with Page access
# 3. Generate a long-lived access token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_long_lived_token
META_PAGE_ID=your_page_id

# =============================================================================
# GOLD TIER - TWITTER/X INTEGRATION
# =============================================================================

# Twitter/X API v2 credentials
# 1. Go to https://developer.x.com/
# 2. Create a project with read/write access
# 3. Generate API keys and tokens
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# =============================================================================
# GOLD TIER - RALPH WIGGUM AUTONOMOUS LOOP
# =============================================================================

# Maximum iterations per autonomous task (default: 10)
RALPH_MAX_ITERATIONS=10

# =============================================================================
# GOLD TIER - CEO BRIEFING
# =============================================================================

# Weekly briefing schedule (cron expression, default: Sunday 9pm)
BRIEFING_SCHEDULE=0 21 * * 0

# =============================================================================
# GOLD TIER - AUDIT LOGGING
# =============================================================================

# Log retention in days (default: 90)
AUDIT_RETENTION_DAYS=90

# Health check interval in seconds (default: 300 = 5 minutes)
HEALTH_CHECK_INTERVAL=300

# =============================================================================
# SECURITY NOTES
# =============================================================================
# - Never commit actual .env files to version control
# - Use environment variables or secret managers for production
# - All OAuth tokens should be stored securely with restricted permissions
# - Rotate API keys and tokens regularly
